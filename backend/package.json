{
  "name": "service",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "tsc -p .",
    "build:start": "tsc -p . && node scr/main.js",
    "start": "node dist/src/main.js",
    "start:dev": "nodemon src/main.ts tsoa spec",
    "prepare": "husky install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "tsc --noEmit && eslint .",
    "lint:format": "tsc --noEmit && eslint --fix .",
    "test": "jest",
    "test:all": "npm run test:cov && npm run build && npm run migration:run && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.ts --runInBand",
    "typeorm": "ts-node -P tsconfig.migration.json ./node_modules/.bin/typeorm -d src/config/data-source.ts",
    "migration:create": "npm run build && typeorm migration:create",
    "migration:generate": "npm run build && npm run typeorm migration:generate --",
    "migration:run": "npm run typeorm migration:run"
  },
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "7.7.0",
    "@supabase/supabase-js": "2.0.4",
    "axios": "0.27.2",
    "embonor-services-utils": "2.9.6",
    "express": "^4.18.1",
    "pg": "8.7.3",
    "swagger-ui-express": "4.5.0",
    "typeorm": "0.3.7",
    "winston": "3.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@sentry/types": "7.7.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.2",
    "@types/node": "^18.0.3",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "commitizen": "^4.2.4",
    "concurrently": "7.2.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-prettier-standard": "3.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "27.5.1",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.2.1",
    "prettier-config-standard": "^1.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "27.1.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "../test/jest-unit.setup.ts"
    ],
    "rootDir": "./src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "**/controllers/**/*.(t|j)s",
      "**/services/**/*.(t|j)s",
      "!**/*.d.ts",
      "!**/*.entity.ts",
      "!**/*.dto.ts",
      "!**/*.repository.ts",
      "!**/queries.ts",
      "!**/*.module.ts",
      "!**/data-source.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:check"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
